@model ConsultantViewModel

<div class="container mt-4">
    <!-- Success Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            @TempData["Message"]
        </div>
    }

    <!-- Header -->
    <h3 class="mb-4">
        <i class="fas fa-tachometer-alt"></i> Financial Advisor Control Panel
    </h3>

    <!-- Clients Table -->
    <div>
        <h4 class="mb-4">
            <i class="fas fa-users"></i> Clients
        </h4>

        @if (Model.appUsers.Any())
        {
            <table class="table table-striped table-info">
                <thead>
                    <tr>
                        <th scope="col">Account No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Student/Staff No.</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.appUsers)
                    {
                        <tr>
                            <td>@user.AccountNumber &nbsp;<span class="badge bg-success">Active</span></td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.StudentStaffNumber</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Advice" asp-controller="FinAdvisor" asp-route-email="@user.Email">
                                    <i class="fa-solid fa-comments"></i> Advice Client
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 class="text-center">
                <i class="fas fa-exclamation-triangle"></i> No users found
            </h5>
        }
    </div>
</div>

<!-- Ensure Font Awesome or another icon library is included -->
