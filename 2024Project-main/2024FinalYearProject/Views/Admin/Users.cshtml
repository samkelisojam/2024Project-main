@using _2024FinalYearProject.Models.ViewModels.Admin
@model UserPageViewModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="fw-bold fs-4">Manage Users</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @if (Model.AppUsers.Count == 0)
                        {
                            <div class="alert alert-warning text-center" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> No users found
                            </div>
                        }
                        else
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr class="highlight">
                                        <th scope="col">#</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Account No</th>
                                        <th scope="col">Balance</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.AppUsers.Select((user, index) => new { user, index }))
                                    {
                                        <tr>
                                            <th scope="row">@user.index + 1</th>
                                            <td>@user.user.AppUser.FirstName</td>
                                            <td>@user.user.AppUser.LastName</td>
                                            <td>@user.user.AppUser.AccountNumber</td>
                                            <td>R @user.user.BankAccount.Balance</td>
                                            <td>
                                                <a href="#" class="btn btn-primary btn-sm me-1">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger btn-sm">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer mt-5">
    <div class="container-fluid">
        <div class="row text-body-secondary">
            <div class="col-6 text-start">
                <a class="text-body-secondary" href="#">
                    <strong>Holdings Tech</strong>
                </a>
            </div>
        </div>
    </div>
</footer>

