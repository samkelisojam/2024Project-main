@model IEnumerable<Notification>

<div class="container mt-5">
    <h3 class="mb-4"><i class="fas fa-bullhorn"></i> All Financial Advisor Advise(s)</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">User <i class="fas fa-user"></i></th>
                <th scope="col">Advice <i class="fas fa-comments"></i></th>
                <th scope="col">Date <i class="fas fa-calendar-day"></i></th>
                <th scope="col">Is Read <i class="fas fa-envelope-open"></i></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rev in Model)
            {
                <tr>
                    <th scope="row">@rev.UserEmail</th>
                    <td>@rev.Message</td>
                    <td>@rev.NotificationDate.ToShortDateString()</td>
                    <td><strong>@rev.IsRead ? <i class="fas fa-check text-success"></i> : <i class="fas fa-times text-danger"></i></strong></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <a asp-action="Index" asp-controller="Admin" class="btn btn-info">
            <i class="fas fa-arrow-left"></i> Go back
        </a>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" integrity="sha384-n8DsbA5h8xHGzM2eq0lV9LgDffI4AbNfPY7WcbR5nPU8d6E6lA9FvxgZBcr7EqU" crossorigin="anonymous"></script>
