@using _2024FinalYearProject.Models.ViewModels.Admin
@model IndexPageViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button class="btn-close" aria-label="Close" data-bs-dismiss="alert"></button>
            @TempData["Message"]
        </div>
    }

    <div class="text-center mb-4">
        <h1>Welcome, Admin!</h1>
        <p>Here are the available options for managing the system:</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">View Clients</h5>
                </div>
                <div class="card-body">
                    <p>Manage and review client profiles and their details.</p>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Go to Clients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">View Consultants</h5>
                </div>
                <div class="card-body">
                    <p>Oversee consultant profiles and manage their information.</p>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Admin" asp-route-currentPage="consultants">Go to Consultants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">View Financial Advisors</h5>
                </div>
                <div class="card-body">
                    <p>Manage financial advisor profiles and their activities.</p>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Admin" asp-route-currentPage="finadvisor">Go to Financial Advisors</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">View All Transactions</h5>
                </div>
                <div class="card-body">
                    <p>Monitor and review all transactions within the system.</p>
                    <a class="btn btn-info" asp-action="Index" asp-controller="Admin" asp-route-currentPage="transactions">Go to Transactions</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">View FA Advice</h5>
                </div>
                <div class="card-body">
                    <p>Access and review advice provided by financial advisors.</p>
                    <a class="btn btn-info" asp-action="ViewAdvices" asp-controller="Admin">Go to FA Advice</a>
                </div>
            </div>
        </div>
    </div>
</div>
