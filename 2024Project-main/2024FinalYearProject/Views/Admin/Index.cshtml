@using _2024FinalYearProject.Models.ViewModels.Admin
@model IndexPageViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button class="btn-close" aria-label="Close" data-bs-dismiss="alert"></button>
            @TempData["Message"]
        </div>
    }
    <h3 class="mb-5">Adminitrator Control Panel</h3>
    <div class="row">
        <div class="col-md-2">
            <div class="list-group ">
                <a class="list-group-item list-group-item-info list-group-item-action @(Model.CurrentPage == "index" ? "active" : "")" asp-action="Index"
                   asp-controller="Admin" asp-route-currentPage="index">View Clients</a>
                <a class="list-group-item list-group-item-info list-group-item-action @(Model.CurrentPage == "transactions" ? "active" : "")" asp-action="Index"
                   asp-controller="Admin" asp-route-currentPage="transactions">View All Transactions</a>
                <a class="list-group-item list-group-item-info list-group-item-action" asp-action="GenerateReport"
                   asp-controller="Consultant">Generate Report</a>
            </div>
        </div>
        <div class="col-md-10">
            @if (Model.CurrentPage == "index")
            {
                <h3>Clients</h3>
                @if (Model.Users.Count() > 0)
                {
                    <table class="table table-striped-columns table-info">
                        <thead>
                            <tr>
                                <th scope="col">Account No.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Student/Staff No.</th>
                                <th scope="col">Deposit/Withdraw</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <th scope="row">@user.AccountNumber &nbsp;<span class="badge bg-success">Active</span></th>
                                    <td>@(user.FirstName + " " + user.LastName)</td>
                                    <td>@user.Email</td>
                                    <td>@user.StudentStaffNumber</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="DepositWithdraw" asp-controller="Consultant" asp-route-email="@user.Email">
                                            <i class="fa-solid fa-money-bill-transfer"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="ConsultantUpdateUser" asp-controller="Consultant" asp-route-email="@user.Email">
                                            <span class="fa fa-edit"></span>
                                        </a>
                                        <a class="btn btn-danger" asp-action="ConsultantDeleteUser" asp-controller="Consultant" asp-route-email="@user.Email" onclick="return confirm(`Are you sure you want to delete user: ${@user.Email} ?`);">
                                            <span class="fa-solid fa-trash"></span>
                                        </a>
                                        <a class="btn btn-outline-primary"
                                           asp-action="ViewAllLogins" asp-controller="Consultant" asp-route-email="@user.Email">View Logins</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h1>No users found</h1>
                }

            }
            else if (Model.CurrentPage == "transactions")
            {
                <h3>Transactions</h3>
                @if (Model.Users.Count() > 0)
                {
                    <table class="table table-striped-columns table-info">
                        <thead>
                            <tr>
                                <th scope="col">Reference</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Date</th>
                                <th scope="col">Email</th>
                                <th scope="col">Receiver Acc. No.</th>
                                <th scope="col">Sender Acc. No.</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <th scope="row">@transaction.Reference &nbsp;<span class="badge bg-success">Active</span></th>
                                    <td>@(transaction.Amount)</td>
                                    <td>@transaction.TransactionDate</td>
                                    <td>@transaction.UserEmail</td>
                                    <td>@transaction.BankAccountIdReceiver</td>
                                    <td>@transaction.BankAccountIdSender</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h1>No users found</h1>
                }
            }
        </div>
    </div>
</div>