@model FeedBack

@{
    ViewBag.Title = "Add Rating";
}

<h2>Add Your Rating</h2>

<form asp-action="AddRatingAsync" method="post">
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" type="number" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserEmail" />

    <button type="submit" class="btn btn-info">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

