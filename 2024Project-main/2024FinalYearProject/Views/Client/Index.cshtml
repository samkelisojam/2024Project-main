@model UpdateProfileViewModel

@{
    ViewBag.Title = "Online Banking - User View";
}

<div class="container mt-5">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button class="btn-close" aria-label="Close" data-bs-dismiss="alert"></button>
            @TempData["Message"]
        </div>
    }
    <div class="row">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm" style="background-color: transparent !important">
                <div class="user-profile text-center">
                    <img src="~/Images/user-avatar.png" alt="User Profile Picture" class="rounded-circle mb-3" style="max-width: 150px;" />

                    <h4 class="profile-name">@Model.Lastname</h4>
                    <p class="profile-info"><strong>Account number:</strong> @Model.AccountNumber</p>
                    <p class="profile-info"><strong>ID Number:</strong> @Model.IDNumber</p>
                    @if (Model.PhoneNumber != null)
                    {
                        <p class="profile-info">
                            <strong>Phone number:</strong> @Model.PhoneNumber
                        </p>
                    }
                    <p class="profile-info"><strong>Email:</strong> @Model.Email</p>
                    <a asp-action="UpdateProfile" asp-controller="Account" class="btn btn-info btn-update">Update Profile</a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <a asp-action="TransferMoneyview" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important;height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fas fa-credit-card fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center">Transfer Money</h5>
                </a>
                <a asp-action="ViewBankBalance" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important; height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fas fa-file-alt fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center">View Bank Balance</h5>
                </a>
                <a asp-action="Transactions" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important; height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fas fa-history fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center"> View Previous Transactions</h5>
                </a>
                <a asp-action="CashSent" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important;height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fas fa-money-bill-alt fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center">Cash Send(Cardless)</h5>
                </a>
                <a asp-action="NotificationMessage" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important; height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fas fa-message fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center"> Notificactions</h5>
                </a>
                <a asp-action="AddRating" asp-controller="Client" class="card p-3 shadow-sm m-2 text-bg-info test" style="background-color: transparent !important; height: 200px!important;width: 200px !important; text-decoration: none;">
                    <i class="fa-solid fa-star-half-stroke  fa-2xl mr-2 text-center mt-5 mb-2"></i>
                    <h5 class="mt-5 text-center"> Review</h5>
                </a>
            </div>
        </div>
    </div>
</div>
