
@model BankAccountViewModela

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Your Bank Account</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Account Number</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.AccountNumber
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Balance</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            $@Model.Balance.ToString("N2")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Account Type</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                           Main Account
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
