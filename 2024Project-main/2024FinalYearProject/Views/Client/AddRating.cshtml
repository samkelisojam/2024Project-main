@model FeedBack

<!-- Include Font Awesome for icons if not already included -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

@{
    ViewBag.Title = "Add Rating";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <!-- Title -->
                <div class="text-center mb-4">
                    <h2>Add Your Rating <i class="fas fa-star"></i></h2>
                </div>

                <!-- Feedback Form -->
                <form asp-action="AddRating" asp-controller="Client" method="post">
                    <!-- Comment Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Comment" class="form-label"><i class="fas fa-comment-dots"></i> Comment</label>
                        <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Enter your comments here..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <!-- Rating Field -->
                    <div class="form-group mb-3">
                        <label asp-for="Rate" class="form-label"><i class="fas fa-star-half-alt"></i> Rating</label>
                        <input asp-for="Rate" type="number" class="form-control" min="1" max="5" placeholder="Rate from 1 to 5" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>

                    <!-- Hidden User Email Field -->
                    <input type="hidden" asp-for="UserEmail" />

                    <!-- Buttons -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-paper-plane me-1"></i> Submit
                        </button>
                        <a asp-action="index" asp-controller="Client" class="btn btn-outline-info ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Go back
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
