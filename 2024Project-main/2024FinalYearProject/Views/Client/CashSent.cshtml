@model CashSentViewModel

@{
    ViewBag.Title = "Cash Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Cash Sent</h3>

                    <!-- Display Available Balance -->
                    <div class="alert alert-info text-center">
                        Available Balance: <strong>R @Model.AvailableBalance</strong>
                    </div>

                    <form asp-action="CashSent" method="post">
                        <div class="form-group">
                            <label asp-for="Amount">Amount to Send</label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Send Cash</button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary btn-block mt-3">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
