
@{
    ViewBag.Title = "Cash Sent Success";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-success">Transaction Successful!</h3>
                    <p class="lead">Your cash digit is: <strong>@ViewBag.CashDigit</strong></p>
                    <p class="lead">Your PIN is: <strong>@ViewBag.PinNumber</strong></p>
                    <p>Transaction Date: @ViewBag.TransactionDate.ToString("MM/dd/yyyy HH:mm:ss")</p>
                    <p class="text-muted">You can collect the cash at any store with Varsity.</p>

                    <a asp-action="Index" class="btn btn-primary btn-block">Back to Account</a>
                </div>
            </div>
        </div>
    </div>
</div>

