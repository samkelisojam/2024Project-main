@model TransferSuccessViewModel

<div class="container">
    <h2>Transfer Successful <i class="fas fa-check-circle"></i></h2>
    <hr />
    <div class="alert alert-success">
        <strong>Success!</strong> You have successfully transferred @Model.Amount to account @Model.ReceiverAccount.
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back to List</a>
        <a asp-action="TransferMoneyview" class="btn btn-secondary"><i class="fas fa-exchange-alt"></i> Transfer Again</a>
    </div>
</div>
