<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2024FinalYearProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link asp-href-include="lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2024FinalYearProject.styles.css" asp-append-version="true" />
</head>

@{
    string action = ViewContext.RouteData.Values["action"].ToString();
    string controller = ViewContext.RouteData.Values["controller"].ToString();
}

<body style="background-color: #F2FCFE !important">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-info bg-gradient mb-2">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" class="text-reset">
                    <img style="height: 30px" src="/Images/logo.png" />
                    <strong>&nbsp;UFS BANK</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mx-auto ">
                        <li class="nav-item">
                            <a class="nav-link mx-2 @(action == "Index" && controller == "Home" ? "active fw-bold" : "")" asp-action="Index" asp-controller="Home">
                                <i class="fa-solid fa-house"></i> &nbsp;&nbsp; Home
                            </a>
                        </li>
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link  @(action == "Index" && controller == "Client" ? "active fw-bold" : "")" asp-area="" asp-controller="Client" asp-action="Index">
                                    <i class="fa-solid fa-file-invoice"></i> &nbsp;&nbsp; My Account
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Consultant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(action == "Index" && controller == "Consultant" ? "active fw-bold" : "")" asp-controller="Consultant" asp-action="Index"> <i class="fa-solid fa-users-line"></i> &nbsp;&nbsp; Consultant</a>
                            </li>
                        }
                        @if (User.IsInRole("FinAdvisor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(action == "Index" && controller == "FinAdvisor" ? "active fw-bold" : "")" asp-controller="FinAdvisor" asp-action="Index"> <i class="fa-solid fa-users-line"></i> &nbsp;&nbsp; Financial Advisor</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(action == "Index" && controller == "Admin" ? "active fw-bold" : "")" asp-controller="Admin" asp-action="Index"> <i class="fa-solid fa-users-line"></i> &nbsp;&nbsp; Admin</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(action == "Privacy" && controller == "Home" ? "active fw-bold" : "")" asp-controller="Home"
                               asp-action="Privacy"><i class="fa-solid fa-headset"></i> &nbsp;&nbsp;Contact Us</a>
                        </li>
                        <div>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Login" asp-controller="Account" class="btn btn-info">
                                    <i class="fa-solid fa-key"></i> &nbsp;&nbsp;Login
                                </a>
                                <a asp-action="Register" asp-controller="Account" class="btn btn-info-outline">Register</a>
                            }
                            else
                            {
                                <div style="cursor: pointer;" class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa-solid fa-key"></i> &nbsp;&nbsp; Hello,
                                        @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a asp-action="Logout" asp-controller="Account" class="dropdown-item">Logout</a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="mb-4 mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start bg-body-tertiary text-muted mt-5">
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <div class="me-5 d-none d-lg-block">
                <span>Get connected with us on social networks:</span>
            </div>
            <div>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
        </section>
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <div class="row mt-3">
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>UFS BANK
                        </h6>
                        <p>
                            Discover seamless banking services, secure transactions, and personalized financial management. Get started today!
                        </p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">
                            App Functionalities
                        </h6>
                        <p>
                            <a class="text-reset">Transfer</a>
                        </p>
                        <p>
                            <a class="text-reset">Cash send</a>
                        </p>
                        <p>
                            <a class="text-reset">View Balance</a>
                        </p>
                        <p>
                            <a asp-action="Index" asp-controller="Home" class="text-reset">More on Home Screen</a>
                        </p>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">
                            Useful links
                        </h6>
                        <p>
                            <a asp-action="Index" asp-controller="Home" class="text-reset">Home</a>
                        </p>
                        <p>
                            <a asp-action="Privacy" asp-controller="Home" class="text-reset">Contact Us</a>
                        </p>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i>UNIVERSITY OF THE FREE STATE</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            []s@ufs4life.ac.za
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Copyright: MY ST NO
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
