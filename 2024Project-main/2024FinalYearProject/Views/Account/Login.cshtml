@model LoginViewModel
@{
    ViewBag.Title = "Login";
}


<div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div>
        <div>
            <h2 class="display-6 text-dark text-center ps-2 pe-2">Welcome back, login to your account</h2>
        </div>
        <div class="text-danger mt-1" asp-validation-summary="All"></div>

        <div>
            <form asp-action="Login" asp-controller="Account" method="post">

                <div class="form-group mb-2">
                    <label class="text-uppercase fw-bolder text-dark-emphasis" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" autocomplete="off"
                           placeholder="Enter email address" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="form-group mb-2">
                    <div class="d-flex justify-content-between">
                        <label class="text-uppercase fw-bolder text-dark-emphasis" asp-for="Password"></label>
                        <a class="visually-hidden" asp-action="Recovery" asp-controller="Account">
                            <small>Forgot Password?</small>
                        </a>
                    </div>

                    <input class="form-control" asp-for="Password" placeholder="Enter password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="mb-2 mt-1">
                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                    <label class="form-check-label">Remember me</label>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        Login to your account
                    </button>
                    <br /><br />
                    Don't have an account?
                    <a asp-action="Register" asp-controller="Account">
                        Create an account
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>